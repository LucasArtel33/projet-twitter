script(src="/javascripts/search-bar.js")
navbar(class="navbar navbar-expand-lg navbar-light bg-white")
  a(class="navbar-brand" href="/")
    img(width="50" src="/images/twitter.png")
  button(class="navbar-toggler")
    span(class="navbar-toggler-icon")
  div(class="collapse navbar-collapse")
    if isAuthenticated
      form(class='d-flex flex-row align-items-center')
        i(class="fas fa-search mr-2 search-icons")
        input(type="text" class="form-control mr-2" placeholder="Rechercher" id='search-input')
        div(id="search-menu-container")
      ul(class="navbar-nav ml-auto")
        li(class="nav-item")
          a(class="btn btn-outline-danger btn-sm btn-tweet mr-3" href="/auth/signout") Deconnexion  
    else
      ul(class="navbar-nav ml-auto")
        li(class="nav-item")
          a(class="nav-link" href="/auth/signin/form") Connexion
        li(class="nav-item")
          a(class="nav-link" href="/users/signup/form") Inscription