extends ../layout.pug

block content
  div(class='d-flex flex-row mx-auto content justify-content-center')
    form(class='card' method="post" action="/auth/signin")
      div(class='card-header') Connexion
      div(class='card-body')
        div(class='form-group')
          label Adresse e-mail :
          input(class="form-control" type="email" name="email")
        div(class='form-group')
          label Mot de passe :
          input(class="form-control" type="password" name="password")
        if errors 
          ul(class="my-2")
            each error in errors
              li(class='text-danger')= error
        div(class="w-100")
          input(type="submit" value="Connexion" class="btn btn-primary ml-auto d-block")