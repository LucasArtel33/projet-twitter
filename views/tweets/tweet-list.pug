if currentUser._id.toString() === user._id.toString()
  div(class="flex-fill mb-2")
    form(class='card' method="post" action="/tweets")
      div(class='card-header')= 'Ecrire un tweet' 
      div(class='card-body')
        div(class='form-group')
          textarea(class="form-control" name="content" placeholder="Quoi de neuf ?")
        if errors 
          ul(class="my-2")
            each error in errors
              li(class='text-danger')= error
        div(class="w-100")
          input(type="submit" value="Envoyer" class="btn btn-primary ml-auto d-block")
if tweets
  each tweet in tweets
    div(class="card tweet-element")
      div(class="card-body")
        div(class="card-text d-flex flex-column")
          div(class="d-flex flex-row justify-content-center align-items-center")
            img(class="img-profile-tweet mr-2" src=tweet.author.avatar)
            a(class="flex-fill" href='/users/' + tweet.author.username)= tweet.author.username
            if tweet.author._id.toString() === currentUser._id.toString()
              div(class="d-flex flex-row justify-content-center")
                a(class="far fa-edit mr-2 text-success" href="/tweets/edit/"+tweet._id)
                i(class="far fa-trash-alt text-danger pointer-cursor" tweetid=tweet._id)
          div(class="pt-3 px-3")= tweet.content